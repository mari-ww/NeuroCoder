{
  "name": "NeuroCoder",
  "displayName": "Teste",
  "description": "aaa",
  "version": "1.0.1",
  "publisher": "Mari-ww",  
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  
  "repository": {
    "type": "git",
    "url": "https://github.com/mari-ww/NeuroCoder.git"
  },

  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "NeuroCoder.showSettingsPanel",
        "title": "Mostrar Configurações do NeuroCoder",
        "category": "NeuroCoder"
      },
      {
          "command": "NeuroCoder.activateFocusMode",
          "title": "Ativar Modo Foco",
          "category": "NeuroCoder"
      },
      {
          "command": "NeuroCoder.deactivateFocusMode",
          "title": "Desativar Modo Foco",
          "category": "NeuroCoder"
      },
      {
        "command": "NeuroCoder.listVariables",
        "title": "Listar Variáveis",
        "category": "NeuroCoder"
      },
      {
        "command": "NeuroCoder.addVariable",
        "title": "Adicionar Variável",
        "category": "NeuroCoder"
      }
    ],
    "keybindings": [
      {
        "command": "NeuroCoder.toggleFocusMode",
        "key": "ctrl+alt+f",
        "mac": "cmd+alt+f"
      },
      {
        "command": "NeuroCoder.showSettingsPanel",
        "key": "ctrl+alt+s",
        "mac": "cmd+alt+s"
      }
    ],
    "configuration": {
      "type": "object",
      "properties": {
        "NeuroCoder.focusModeBackground": {
          "type": "string",
          "default": "rgba(0, 0, 0, 0.7)",
          "description": "Cor do fundo ao ativar o Modo de Leitura Aprimorado."
        },
        "NeuroCoder.dyslexicMode": {
          "type": "boolean",
          "default": false,
          "description": "Ativar modo dislexia (fonte OpenDyslexic)"
        },
        "NeuroCoder.focusModeOpacity": {
          "type": "number",
          "default": 0.7,
          "minimum": 0.1,
          "maximum": 1,
          "description": "Opacidade do fundo no Modo de Leitura Aprimorado (0.1 = mais claro, 1.0 = totalmente escuro)."
        },
        "NeuroCoder.font": {
          "type": "string",
          "default": "Lexend",
          "enum": [
            "Lexend",
            "OpenDyslexic"
          ],
          "description": "Fonte utilizada no editor"
        },
        "NeuroCoder.fontSize": {
          "type": "number",
          "default": 14,
          "description": "Tamanho da fonte no editor"
        },
        "NeuroCoder.color": {
          "type": "string",
          "default": "#000000",
          "description": "Cor do texto no editor"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "fast-xml-parser": "^4.5.1",
    "fastest-levenshtein": "^1.0.16",
    "leven": "^4.0.0"
  }
}
