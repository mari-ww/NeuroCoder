{
  "name": "neurocoder",
  "displayName": "NeuroCoder",
  "description": "VS Code extension for neurodivergent programmers. Offers visual accessibility tools, focus mode, dyslexia-friendly fonts, color-blind friendly themes, and productivity features.",
  "version": "1.0.5",
  "publisher": "Mari-ww",
  "icon": "media/images/logo.png",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other",
    "Themes"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mari-ww/NeuroCoder.git"
  },
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "NeuroCoder.showSettingsPanel",
        "title": "Mostrar Configurações do NeuroCoder",
        "category": "NeuroCoder"
      },
      {
        "command": "NeuroCoder.activateFocusMode",
        "title": "Ativar Modo Foco",
        "category": "NeuroCoder"
      },
      {
        "command": "NeuroCoder.deactivateFocusMode",
        "title": "Desativar Modo Foco",
        "category": "NeuroCoder"
      },
      {
        "command": "NeuroCoder.toggleFocusMode",
        "title": "Alternar Modo Foco",
        "category": "NeuroCoder"
      }
    ],
    "keybindings": [
      {
        "command": "NeuroCoder.toggleFocusMode",
        "key": "ctrl+alt+f",
        "mac": "cmd+alt+f"
      },
      {
        "command": "NeuroCoder.showSettingsPanel",
        "key": "ctrl+alt+s",
        "mac": "cmd+alt+s"
      }
    ],
    "themes": [
      {
        "label": "NeuroCoder Protanopia",
        "uiTheme": "vs-dark",
        "path": "./media/themes/protanopia-color-theme.json"
      },
      {
        "label": "NeuroCoder Deuteranopia", 
        "uiTheme": "vs-dark",
        "path": "./media/themes/deuteranopia-color-theme.json"
      },
      {
        "label": "NeuroCoder Tritanopia",
        "uiTheme": "vs-dark", 
        "path": "./media/themes/tritanopia-color-theme.json"
      },
      {
        "label": "NeuroCoder Protanopia Light",
        "uiTheme": "vs",
        "path": "./media/themes/protanopia-light-color-theme.json"
      },
      {
        "label": "NeuroCoder Deuteranopia Light",
        "uiTheme": "vs",
        "path": "./media/themes/deuteranopia-light-color-theme.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "NeuroCoder",
      "properties": {
        "NeuroCoder.colorBlindTheme": {
          "type": "string",
          "default": "none",
          "enum": [
            "none",
            "protanopia",
            "deuteranopia", 
            "tritanopia",
            "protanopia-light",
            "deuteranopia-light"
          ],
          "description": "Tema para daltonismo (aplicado automaticamente)"
        },
        "NeuroCoder.focusModeBackground": {
          "type": "string",
          "default": "rgba(0, 0, 0, 0.7)",
          "description": "Cor do fundo ao ativar o Modo de Leitura Aprimorado."
        },
        "NeuroCoder.dyslexicMode": {
          "type": "boolean",
          "default": false,
          "description": "Ativar modo dislexia (fonte OpenDyslexic)"
        },
        "NeuroCoder.focusModeOpacity": {
          "type": "number",
          "default": 0.7,
          "minimum": 0.1,
          "maximum": 1,
          "description": "Opacidade do fundo no Modo de Leitura Aprimorado."
        },
        "NeuroCoder.font": {
          "type": "string",
          "default": "Lexend",
          "enum": [
            "Lexend",
            "OpenDyslexic",
            "Arial",
            "Verdana",
            "Comic Sans MS",
            "default"
          ],
          "description": "Fonte utilizada no editor"
        },
        "NeuroCoder.fontSize": {
          "type": "number",
          "default": 14,
          "description": "Tamanho da fonte no editor"
        },
        "NeuroCoder.color": {
          "type": "string",
          "default": "#000000",
          "description": "Cor do texto no editor"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "fast-xml-parser": "^4.5.1",
    "fastest-levenshtein": "^1.0.16",
    "leven": "^4.0.0"
  }
}